<div class="row">
    <div class="col-md-6">
        <section class="resume-section" id="education">
            <div class="resume-section-content">
                <h2 class="mb-5">History</h2>
                <div class="mt-3">
                    <ul class="list-group">
                        <li v-for="f in history" v-on:click="retrieveHistory(f)" class="list-group-item list-group-item-action">
                            {{ f }}
                        </li>
                    </ul>
                </div>
                <button type="button" v-on:click="clearHistory" class="btn btn-primary mt-3">Clear History</button>
            </div>
        </section>
    </div>


    <div class="col-md-6 mt-4 card-container" class="scrollable-section" style="height: 800px; overflow-y: auto;">
        <div v-for="item in historyDetails" :key="item.position" class="row">
            <div v-if="item.type === 0" class="col-md-6 mb-4">
                <div class="card rounded-3 shadow">
                    <div class="card-body">
                        <h5 class="card-title custom-card">Title: {{ item.title }}</h5>
                        <h5 class="card-title custom-card">Link: {{ item.link }}</h5>
                        <h5 class="card-title custom-card">Snippet: {{ item.snippet }}</h5>
                        <h5 class="card-title custom-card">Source: {{ item.source }}</h5>
                        <!-- Additional card content goes here -->
                    </div>
                </div>
            </div>

            <div v-if="item.type === 2" class="col-md-6 mb-4">
                <div class="card rounded-3 shadow">
                    <div class="card-body">
                        <h5 class="card-title custom-card">Title: {{ item.title }}</h5>
                        <h5 class="card-title custom-card">Link: {{ item.link }}</h5>
                        <h5 class="card-title custom-card">Source: {{item.source}}</h5>

                        <!-- Additional card content goes here -->
                    </div>
                </div>
            </div>

            <div v-if="item.type === 3" class="col-md-6 mb-4">
                <div class="card rounded-3 shadow">
                    <div class="card-body">
                        <h5 class="card-title custom-card">Title: {{ item.title }}</h5>
                        <h5 class="card-title custom-card">Link: {{ item.link }}</h5>
                        <h5 class="card-title custom-card">Source: {{item.source}}</h5>

                        <!-- Additional card content goes here -->
                    </div>
                </div>
            </div>

            <div v-if="item.type === 4" class="col-md-6 mb-4">
                <div class="card rounded-3 shadow">
                    <div class="card-body">
                        <img :src="item.flag" width="60" height="40" />
                        <h5 class="card-title custom-card">Latitude: {{ item.latitude }}</h5>
                        <h5 class="card-title custom-card">Longitude: {{item.longitude}}</h5>
                        <h5 class="card-title custom-card">City: {{item.city}}</h5>
                        <h5 class="card-title custom-card">Postal: {{item.postal}}</h5>

                        <h5 class="card-title custom-card">Region: {{item.region}}</h5>
                        <h5 class="card-title custom-card">Country: {{item.country}}</h5>
                        <h5 class="card-title custom-card">Calling Code: {{item.calling_code}}</h5>

                        <h5 class="card-title custom-card">Continent: {{item.continent}}</h5>
                    </div>
                </div>
            </div>

            
        </div>
    </div>
    
</div>
        
        
        
        
        
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>

