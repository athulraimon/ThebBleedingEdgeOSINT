<div class="row">
<div class="col-md-6">
        <section class="resume-section" id="education">
            <div class="resume-section-content">
                <h2 class="mb-5">New Scan</h2>
                <div class="mt-3">
                    <label for="scanType">Select Scan Type:</label>
                    <select id="scanType" v-model="selectedScanType" class="form-select" style="width:300px;">
                        <option value="0">CV</option>
                        <option value="1">Email</option>
                        <option value="2">Username</option>
                        <option value="3">Social Presence</option>
                        <option value="4">Location from IP</option>
                        <option value="5">Location from phone</option>
                        <option value="6">Email breaches</option>
                        <option value="7">Crypto Transfers</option>
                        
                       
                    </select>
                </div>

                <div class="d-flex flex-column flex-md-row justify-content-between mb-5">
                    <div class="flex-grow-1">
                        <h3 class="mb-0">Scan Name</h3>
                <input type="text" placeholder="Enter your input" v-model="scanName" style="opacity: 0.7; background-color: transparent; border: none; border-bottom: 1px solid #ccc; padding: 5px; width: 300px;">

            </div>
                    
                </div>
                <div class="d-flex flex-column flex-md-row justify-content-between">
                    <div class="flex-grow-1">
                        <h3 class="mb-0">Scan Target</h3>
                        <input v-if="selectedScanType==0" type="text" placeholder="Enter First Name" v-model="firstName" style="opacity: 0.7; background-color: transparent; border: none; border-bottom: 1px solid #ccc; padding: 5px; width: 300px;">
                        <input v-if="selectedScanType==0" type="text" placeholder="Enter Last Name" v-model="lastName" style="opacity: 0.7; background-color: transparent; border: none; border-bottom: 1px solid #ccc; padding: 5px; width: 300px;">

                        <input v-if="selectedScanType==1" type="text" placeholder="Enter Email" v-model="emailInput" style="opacity: 0.7; background-color: transparent; border: none; border-bottom: 1px solid #ccc; padding: 5px; width: 300px;">
                        <input v-if="selectedScanType==2" type="text" placeholder="Enter Username" v-model="usernameInput" style="opacity: 0.7; background-color: transparent; border: none; border-bottom: 1px solid #ccc; padding: 5px; width: 300px;">
                        <input v-if="selectedScanType==3" type="text" placeholder="Enter First Name" v-model="firstName" style="opacity: 0.7; background-color: transparent; border: none; border-bottom: 1px solid #ccc; padding: 5px; width: 300px;">
                        <input v-if="selectedScanType==3" type="text" placeholder="Enter Last Name" v-model="lastName" style="opacity: 0.7; background-color: transparent; border: none; border-bottom: 1px solid #ccc; padding: 5px; width: 300px;">
                        <input v-if="selectedScanType==3" type="text" placeholder="Enter Website(URL)" v-model="websiteInput" style="opacity: 0.7; background-color: transparent; border: none; border-bottom: 1px solid #ccc; padding: 5px; width: 300px;">

                        <input v-if="selectedScanType==4" type="text" placeholder="Enter IP Address" v-model="ipInput" style="opacity: 0.7; background-color: transparent; border: none; border-bottom: 1px solid #ccc; padding: 5px; width: 300px;">
                        <input v-if="selectedScanType==5" type="text" placeholder="Enter Phone NUmber" v-model="phoneInput" style="opacity: 0.7; background-color: transparent; border: none; border-bottom: 1px solid #ccc; padding: 5px; width: 300px;">
                        <input v-if="selectedScanType==6" type="text" placeholder="Enter email" v-model="breachEmailInput" style="opacity: 0.7; background-color: transparent; border: none; border-bottom: 1px solid #ccc; padding: 5px; width: 300px;">
                        <input v-if="selectedScanType==7" type="text" placeholder="Enter address" v-model="cryptoInput" style="opacity: 0.7; background-color: transparent; border: none; border-bottom: 1px solid #ccc; padding: 5px; width: 300px;">

                        <input v-if="selectedScanType==8" type="file" accept="image/*" v-on:change="handleImageUpload" style=" position: absolute;">
                    </div>
                </div>
                <button v-if="selectedScanType==0" type="button" v-on:click="startNameScan" class="btn btn-primary mt-3">Start Scan</button>
                <button v-if="selectedScanType==1" type="button" v-on:click="startEmailScan" class="btn btn-primary mt-3">Start Scan</button>
                <button v-if="selectedScanType==2" type="button" v-on:click="startUsernameScan" class="btn btn-primary mt-3">Start Scan</button>
                <button v-if="selectedScanType==3" type="button" v-on:click="startSocialScan" class="btn btn-primary mt-3">Start Scan</button>
                <button v-if="selectedScanType==4" type="button" v-on:click="startIpScan" class="btn btn-primary mt-3">Start Scan</button>
                <button v-if="selectedScanType==5" type="button" v-on:click="startPhoneScan" class="btn btn-primary mt-3">Start Scan</button>
                <button v-if="selectedScanType==6" type="button" v-on:click="startBreachScan" class="btn btn-primary mt-3">Start Scan</button>
                <button v-if="selectedScanType==7" type="button" v-on:click="startCryptoScan" class="btn btn-primary mt-3">Start Scan</button>


                <button type="button" v-if="selectedScanType==8" for="imageUpload" class="btn btn-secondary mt-2" v-on:click="startScan">Upload Image</button>

            </div>
        </section>


    </div>
<div class="col-md-6 mt-4 card-container" >
        <div v-if="showScrollableSection" class="scrollable-section" style="height: 800px; overflow-y: auto;">
        <!-- Content for the scrollable section -->
        <div v-if="selectedScanType==0" class="row">
            <div v-for="card in nameList" :key="card.position" class="col-md-6 mb-4">
                <div class="card rounded-3 shadow">
                    <div class="card-body">
                        <h5 class="card-title custom-card">Title: {{ card.title }}</h5>
                            <h5 class="card-title custom-card">Link: {{ card.link }}</h5>
                            <h5 class="card-title custom-card">Snippet: {{card.snippet}}</h5>
                            <h5 class="card-title custom-card">Source: {{card.source}}</h5>

                        <!-- Additional card content goes here -->
                        <!-- You can customize the card structure based on your data -->
                    </div>
                </div>
            </div>
        </div>

        <div v-if="selectedScanType==1" class="row">
                <div v-html="htmlcontent"></div>
         </div>

        <div v-if="selectedScanType==2" class="row">
            <div v-for="card in usernameList" :key="card.position" class="col-md-6 mb-4">
                <div class="card rounded-3 shadow">
                    <div class="card-body">
                        <h5 class="card-title custom-card">Title: {{ card.title }}</h5>
                            <h5 class="card-title custom-card">Link: {{ card.link }}</h5>
                            <h5 class="card-title custom-card">Source: {{card.source}}</h5>

                        <!-- Additional card content goes here -->
                        <!-- You can customize the card structure based on your data -->
                    </div>
                </div>
            </div>
        </div>

         <div v-if="selectedScanType==3" class="row">
            <div v-for="card in name2List" :key="card.position" class="col-md-6 mb-4">
                <div class="card rounded-3 shadow">
                    <div class="card-body">
                        <h5 class="card-title custom-card">Title: {{ card.title }}</h5>
                            <h5 class="card-title custom-card">Link: {{ card.link }}</h5>
                            <h5 class="card-title custom-card">Source: {{card.source}}</h5>

                        <!-- Additional card content goes here -->
                        <!-- You can customize the card structure based on your data -->
                    </div>
                </div>
            </div>
        </div>

         <div v-if="selectedScanType==4" class="row">
            <div v-for="card in locList" :key="card.position" class="col-md-6 mb-4">
                <div class="card rounded-3 shadow">
                    <div class="card-body">
                            <img :src="card.flag" width="60" height="40"/>
                            <h5 class="card-title custom-card">Latitude: {{ card.latitude }}</h5>
                            <h5 class="card-title custom-card">Longitude: {{card.longitude}}</h5>
                            <h5 class="card-title custom-card">City: {{card.city}}</h5>
                            <h5 class="card-title custom-card">Postal: {{card.postal}}</h5>

                            <h5 class="card-title custom-card">Region: {{card.region}}</h5>
                            <h5 class="card-title custom-card">Country: {{card.country}}</h5>
                            <h5 class="card-title custom-card">Calling Code: {{card.calling_code}}</h5>

                            <h5 class="card-title custom-card">Continent: {{card.continent}}</h5>





                        <!-- Additional card content goes here -->
                        <!-- You can customize the card structure based on your data -->
                    </div>
                </div>
            </div>
        </div>

            <div v-if="selectedScanType==5" class="row">
                <div v-for="card in phoneList" :key="card.position" class="col-md-6 mb-4">
                    <div class="card rounded-3 shadow">
                        <div class="card-body">
                            <h5 class="card-title custom-card">Carrier Name: {{ card.carrier }}</h5>
                            <h5 class="card-title custom-card">Mobile Country Code: {{card.country}}</h5>
                            <h5 class="card-title custom-card">Mobile Network Code: {{card.network}}</h5>
                          





                            <!-- Additional card content goes here -->
                            <!-- You can customize the card structure based on your data -->
                        </div>
                    </div>
                </div>
            </div>

            <div v-if="selectedScanType==6" class="row">
                <div v-for="card in breachList" :key="card.position" class="col-md-6 mb-4">
                    <div class="card rounded-3 shadow">
                        <div class="card-body">
                            
                            <h5 class="card-title custom-card">Database Name: {{ card.database_name }}</h5>
                            <h5 class="card-title custom-card">Email: {{card.email}}</h5>
                            <h5 class="card-title custom-card">Hashed Password: {{card.hashed_password}}</h5>
                           
                        </div>
                    </div>
                </div>
            </div>

            <div v-if="selectedScanType==7" class="row">
                <div v-for="card in cryptoList" :key="card.position" class="col-md-6 mb-4">
                    <div class="card rounded-3 shadow">
                        <div class="card-body">

                            <h5 class="card-title custom-card">Transaction: {{ card.transaction }}</h5>
                            <h5 class="card-title custom-card">Amount: {{card.amount}}</h5>
                            <h5 class="card-title custom-card">Receiver Address: {{card.receiver}}</h5>
                            <h5 class="card-title custom-card">Sender Address: {{card.sender}}</h5>


                        </div>
                    </div>
                </div>
            </div>





            
    </div>
</div>
</div>